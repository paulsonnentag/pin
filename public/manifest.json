{
  "manifest_version": 2,
  "name": "pin",
  "version": "1.0",
  "description": "Pin extension",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "sidebar_action": {
    "default_title": "Search",
    "default_panel": "sidebar.html",
    "default_icon": "icons/search.svg"
  },
  "browser_action": {
    "default_title": "Search",
    "default_icon": "icons/search.svg"
  },
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "injected.js",
    "index.js",
    "api.js",
    "automerge_wasm_bg.wasm"
  ]
}
