{
  "manifest_version": 3,
  "name": "pin",
  "version": "1.0",
  "description": "Pin extension",
  "background": {
    "scripts": ["background.js"],
    "type": "module",
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
  "permissions": ["webRequest", "webRequestFilterResponse", "tabs", "storage"],
  "host_permissions": ["<all_urls>"]
}
