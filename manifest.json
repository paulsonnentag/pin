{
  "manifest_version": 2,
  "name": "pin",
  "version": "1.0",
  "description": "Pin extension",
  "background": {
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["webRequest", "webRequestBlocking", "tabs", "<all_urls>"]
}
